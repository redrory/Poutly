<li id="<%= feed_item.id %>">
  <span class="user">
  

    <table class = "table table-striped table-hover">
      <tr>  
        <th>Company</th>
        <th>Project Name</th>
        <th>Due Date</th>
        <th>Amount Due</th>
        <th>Days Left</th>

      </tr>
      <td><%= feed_item.name %></td>
      <td><%= feed_item.project_name %></td>
      <td><%= feed_item.due_date.to_formatted_s(:long)  %></td>
      <td><%= feed_item.amount %></td>
      <td><%= @days_left = (feed_item.due_date - Date.today).to_i %></td>

    </table>
  </span>

  <br>

  <%= link_to "Delete", feed_item, method: :delete, data: {confirm: "You sure"}, title: feed_item.project_name  %>

  <%= link_to "Edit ", edit_client_path(feed_item) %>

  <%= link_to "Mark as Paid", client_paid_path(feed_item), class: "btn btn-small btn-success" %>

  <%= link_to "Email Reminders ", "#", :class => "clickme" %>   


<script type="text/javascript">

  $(document).ready(function (){
    $('.e_field').hide(); 
    console.log("Loaded");
    $('.clickme').click(function() {
      console.log("Clcicked");
      var $div = $('.e_field').eq($(this).index('.clickme'));  // get the relevant div
      console.log("my action__" + $div)
            $div.show();  // show the relevant div
    });


  });
</script>

   <div id ="reminder_form">
    <%= form_for(feed_item) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <div class="e_field">
        <p> Set Daily Reminder
          <%= f.email_field :email, placeholder: "email address to send reminder" %>
          <%= f.submit "Confirm ", class: "btn btn-small btn-primary"%>
        </p>
      <% end %>
      </div>

   </div>

  



  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
</li>